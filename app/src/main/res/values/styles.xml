<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="qmui_config_color_blue">@color/colorPrimary</item>
        <item name="qmui_round_btn_bg_color">@color/s_btn_app_color1</item>
        <item name="qmui_round_btn_border_color">@color/s_btn_app_color1</item>
        <item name="qmui_round_btn_text_color">@color/s_btn_app_color</item>
    </style>

    <style name="DialogTransparentStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_black_alpha_50</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/golden</item>
    </style>

    <style name="AnimFadeInOut" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="HomeTabStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/size_4</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/size_8</item>
        <item name="android:textColor">@drawable/sel_home_tab_text</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="MineItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/size_16</item>
        <item name="android:layout_marginRight">@dimen/size_16</item>
        <item name="android:background">@drawable/qmui_s_list_item_bg_with_border_none</item>
        <item name="android:drawableRight">@drawable/ic_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/size_16</item>
        <item name="android:paddingTop">@dimen/size_12</item>
        <item name="android:paddingRight">@dimen/size_24</item>
        <item name="android:paddingBottom">@dimen/size_12</item>
        <item name="android:textColor">@color/light_black1</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="OrderStatusStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/size_4</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/size_16</item>
        <item name="android:paddingBottom">@dimen/size_16</item>
        <item name="android:textColor">@color/app_color</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="Padding_16_12">
        <item name="android:paddingLeft">@dimen/size_16</item>
        <item name="android:paddingTop">@dimen/size_12</item>
        <item name="android:paddingRight">@dimen/size_16</item>
        <item name="android:paddingBottom">@dimen/size_12</item>
    </style>

    <style name="Padding_16_8">
        <item name="android:paddingLeft">@dimen/size_16</item>
        <item name="android:paddingTop">@dimen/size_8</item>
        <item name="android:paddingRight">@dimen/size_16</item>
        <item name="android:paddingBottom">@dimen/size_8</item>
    </style>

    <style name="Padding_16_4">
        <item name="android:paddingLeft">@dimen/size_16</item>
        <item name="android:paddingTop">@dimen/size_4</item>
        <item name="android:paddingRight">@dimen/size_16</item>
        <item name="android:paddingBottom">@dimen/size_4</item>
    </style>
</resources>
