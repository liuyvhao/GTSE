<?xml version="1.0" encoding="utf-8"?>
<com.witfrog.gtse.widget.WindowInsetConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".ui.shop.order.ConfirmOrderActivity">

    <include layout="@layout/include_top_bar" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_address"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/font_16"
        android:layout_marginTop="@dimen/font_20"
        android:layout_marginRight="@dimen/font_16"
        android:background="@drawable/bg_white_solid4"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/tv_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_16"
            android:layout_marginTop="@dimen/font_12"
            android:text="张三"
            android:textColor="@color/light_black1"
            android:textSize="@dimen/font_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_address_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_16"
            android:text="陕西省西安市高新区蒜泥空间"
            android:textColor="@color/light_black1"
            android:textSize="@dimen/font_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_address_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_16"
            android:layout_marginBottom="@dimen/font_12"
            android:text="13785221300"
            android:textColor="@color/light_black1"
            android:textSize="@dimen/font_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/font_16"
            android:src="@drawable/ic_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="@dimen/font_16"
        android:layout_marginTop="@dimen/font_20"
        android:layout_marginRight="@dimen/font_16"
        android:background="@drawable/bg_white_solid4"
        app:layout_constraintTop_toBottomOf="@id/cl_address">

        <ImageView
            android:id="@+id/shop_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="@dimen/font_16"
            android:background="@color/light_black3"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_16"
            android:layout_marginTop="33dp"
            android:text="@string/shop_name"
            android:textColor="@color/light_black"
            app:layout_constraintLeft_toRightOf="@id/shop_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_16"
            android:layout_marginBottom="30dp"
            android:text="@string/shop_integral"
            android:textColor="@color/app_color"
            android:textSize="@dimen/size_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/shop_img" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:layout_marginRight="@dimen/font_16"
            android:layout_marginBottom="26dp"
            android:gravity="center"
            android:text="X1"
            android:background="@drawable/shop_confirm_label"
            android:textSize="@dimen/font_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/qmui_s_list_item_bg_with_border_none"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/submit"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:background="@color/app_color1"
            android:gravity="center"
            android:text="@string/repurchase"
            android:textColor="@color/app_color"
            android:textSize="@dimen/font_14"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:text="合计"
            android:textColor="@color/light_black1"
            android:textSize="@dimen/font_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/submit"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/font_20"
            android:text="3000积分"
            android:textColor="@color/light_black1"
            android:textSize="@dimen/font_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/submit"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</com.witfrog.gtse.widget.WindowInsetConstraintLayout>