<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/size_16">

    <TextView
        android:id="@+id/tv_confirm_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:gravity="center"
        android:text="@string/confirm_alert"
        android:textColor="@color/light_black1"
        android:textSize="@dimen/font_16"
        app:layout_constraintTop_toTopOf="parent" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24"
        android:elevation="@dimen/size_2"
        android:gravity="center"
        android:paddingLeft="@dimen/size_24"
        android:paddingTop="@dimen/size_4"
        android:paddingRight="@dimen/size_24"
        android:paddingBottom="@dimen/size_4"
        android:text="@string/cancel"
        android:textColor="@color/s_btn_app_color1"
        android:textSize="@dimen/font_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_confirm"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_alert"
        app:qmui_backgroundColor="@color/s_btn_gray"
        app:qmui_radius="@dimen/size_4" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/tv_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24"
        android:elevation="@dimen/size_2"
        android:gravity="center"
        android:paddingLeft="@dimen/size_24"
        android:paddingTop="@dimen/size_4"
        android:paddingRight="@dimen/size_24"
        android:paddingBottom="@dimen/size_4"
        android:text="@string/confirm"
        android:textColor="@color/s_btn_app_color"
        android:textSize="@dimen/font_16"
        app:layout_constraintLeft_toRightOf="@+id/tv_cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_alert"
        app:qmui_backgroundColor="@color/s_btn_app_color1"
        app:qmui_radius="@dimen/size_4" />
</android.support.constraint.ConstraintLayout>